        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name">
        <activity
            android:screenOrientation="portrait"
            android:label="@string/app_name"
            android:name=".BlindAssistantActivity" >
            
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:label="@string/app_name"
            android:name=".BlindSearchResultActivity" >
            
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:label="@string/app_name"
            android:name=".BlindSettingsActivity" >
            
        </activity>
